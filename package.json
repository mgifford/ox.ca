{
  "name": "ox-ca-quality",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "cspell": "^6.8.0",
    "html-validate": "^8.7.0",
    "linkinator": "^6.0.0",
    "pa11y": "^6.1.0",
    "pa11y-ci": "^3.0.0",
    "qrcode": "^1.5.4"
  },
  "scripts": {
    "validate:html": "html-validate -c .htmlvalidate.json 'presentations/**/*.html'",
    "scan:accessibility": "pa11y-ci --config .pa11yci.json || true",
    "check:links": "./scripts/check-links.sh || true",
    "spell:md": "git ls-files \"**/*.md\" | xargs -r npx cspell || true",
    "qa:all": "npm run validate:html && npm run scan:accessibility && npm run check:links && npm run spell:md",
    "fetch:whisper": "./scripts/fetch-whisper-demo.sh",
    "dev:transcript": "node scripts/whisper-transcript-watch.js --src presentations/whisper-demo/transcript.txt",
    "dev:transcript:json": "node scripts/whisper-transcript-watch.js --src presentations/whisper-demo/transcript.json",
    "dev:whisper": "node scripts/run-whisper.js"
  }
}
